            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/install/linux-debug/bin",
            "environment": [],
            "console": "integratedTerminal",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
